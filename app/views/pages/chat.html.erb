      </div>
    </div>
    <!-- Messages column -->
    <div class="col-3 bg-light">
      <div class="container-fluid">
        <div class="row">
          <div class="channel-list">
            <div class="channel active">
              #general
            </div>
            <div class="channel">
              #random
