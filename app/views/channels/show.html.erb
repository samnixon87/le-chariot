<!-- Languages column -->
<div class="">
  <div class="row">
    <div class="col-1 bg-dark p-3 border-right border-black">
      <div class="d-flex justify-content-center">
        <img src="<%= image_path('js_logo.png') %>" alt="logo" class="rounded border border-white" width="50px" height="50px">
      </div>
    </div>
    <!-- Issues column -->
    <!-- Messages column -->
  </div>
  <div class="col-8">
    <div class="container">
    <%= @issues.each do |issue| %>
      <div data-controller="issue-subscription" data-issue-subscription-issue-id-value="<%= issue.id %>">
        <h3 class="mt-2">#<%= issue.title.downcase %></h3>
        <div class="message-list">
          <div class="messages" data-issue-subscription-target="messages">
            <% issue.messages.each do |message| %>
              <%= render "messages/message", message: message %>
            <% end %>
          </div>
        </div>
        <% end %>
        <div class="message-input">
          <%= simple_form_for [@issue, @message], html: {class: "d-flex"} do |f| %>
            <%= f.input :content,
              label: false,
              placeholder: "Message ##{@issue.title}",
              wrapper_html: {class: "flex-grow-1"}
            %>
            <%= f.submit "Send", class: "btn btn-primary mb-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
