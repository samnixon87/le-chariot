<div class="col-8">
  <div class="container">
    <h3 class="mt-2">#<%= @channel.name.downcase %></h3>
    <div class="message-list">
      <div
        data-controller="channel-subscription"
        data-channel-subscription-channel-id-value="<%= @channel.id %>">
        <div class="messages" data-channel-subscription-target="messages">
          <% @channel.chatroom_messages.each do |message| %>
            <%= render "chatroom_messages/chatroom_message", message: message %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="message-input">
  <%= simple_form_for [@channel, @chatroom_message], html: {class: "d-flex"} do |f| %>
    <%= f.input :content,
                label: false,
                placeholder: "Message ##{@channel.name}",
                wrapper_html: {class: "flex-grow-1"}
              %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
